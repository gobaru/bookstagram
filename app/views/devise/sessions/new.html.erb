<div class="inner">
  <div class="form__wrapper">
    <h2 class="page-heading">ユーザーログイン</h2>

    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

      <div class="field">
        <%= f.label :email, "メールアドレス 必須" %><br />
        <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード 必須" %><br />
        <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: :form__btn  %>
      </div>
    <% end %>
  </div>
</div>
